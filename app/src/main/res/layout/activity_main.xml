<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/root_linearLayout"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:orientation="vertical"
                  android:padding="20dp">

        <Button
            android:id="@+id/btn_ratingBar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Rating Bar"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_acceleratingBall"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Accelerating Ball"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_redCarp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Red Carp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_eventBus"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="EventBus"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_hintDialog"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="HintDialog"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_simpleLoadingBar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="SimpleLoadingBar"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_staticFragment"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="StaticFragment"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_videoPlayer"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="VideoPlayer"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_recyclerviewAnimation"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="RecyclerviewAnimation"
            android:textAllCaps="false"/>

    </LinearLayout>
</ScrollView>